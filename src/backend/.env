# FarmPulse Environment Configuration

# Server configuration
PORT=3001

# MongoDB connection (leave as-is if not installed)
MONGODB_URI=mongodb://localhost:27017/farmpulse
# Set to true to force using SQLite even if MongoDB is available
USE_SQLITE=false 

# InfluxDB configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=farmpulse-dev-token
INFLUXDB_ORG=farmpulse
INFLUXDB_BUCKET=iot_sensors

# API Security
DEVICE_API_KEY=dev-api-key-for-testing
JWT_SECRET=farmpulse-jwt-secret-dev-only

# Development settings
NODE_ENV=development
LOG_LEVEL=info
